{
  "name": "@maxmilton/stylelint-config",
  "version": "0.0.10",
  "description": "Stylelint configuration with support for XCSS via ekscss",
  "repository": "maxmilton/stylelint-config",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "main": "stylelint.config.js",
  "files": [
    "stylelint.config.js"
  ],
  "scripts": {
    "lint": "pnpm run lint:js && pnpm run lint:ts",
    "lint:js": "eslint --ignore-path .gitignore --ext .cjs,.js,.mjs,.ts .",
    "lint:ts": "tsc",
    "test": "uvu -r tsm test '\\.test\\.ts$'"
  },
  "peerDependencies": {
    "stylelint": "^14.0.0"
  },
  "dependencies": {
    "postcss-ekscss": "^0.0.5",
    "stylelint-order": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "eslint": "8.10.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-unicorn": "41.0.0",
    "prettier": "2.5.1",
    "stylelint": "14.5.3",
    "stylelint-config-standard": "25.0.0",
    "tsm": "2.2.1",
    "typescript": "4.6.2",
    "uvu": "0.5.3"
  }
}
