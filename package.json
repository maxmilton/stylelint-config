{
  "name": "@maxmilton/stylelint-config",
  "version": "0.4.2",
  "description": "Stylelint configuration with support for XCSS via ekscss",
  "repository": "github:maxmilton/stylelint-config",
  "homepage": "https://github.com/maxmilton/stylelint-config",
  "author": "Max Milton <max@2okki.com>",
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./tailwindcss": {
      "types": "./src/index.d.ts",
      "default": "./src/tailwindcss.js"
    },
    "./xcss": {
      "types": "./src/index.d.ts",
      "default": "./src/xcss.js"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "lint": "bun lint:fmt && bun lint:js && bun lint:ts",
    "lint:fmt": "biome check",
    "lint:js": "eslint",
    "lint:ts": "tsc --noEmit",
    "test": "bun test"
  },
  "peerDependencies": {
    "stylelint": "^17.0.0"
  },
  "dependencies": {
    "postcss-ekscss": "^0.0.15",
    "stylelint-order": "^7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@eslint/js": "10.0.1",
    "@maxmilton/eslint-config": "0.3.0",
    "@types/bun": "1.3.8",
    "eslint": "10.0.2",
    "eslint-plugin-unicorn": "62.0.0",
    "stylelint": "17.1.0",
    "stylelint-config-standard": "40.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0"
  }
}
