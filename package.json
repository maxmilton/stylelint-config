{
  "name": "@maxmilton/stylelint-config",
  "version": "0.4.1",
  "description": "Stylelint configuration with support for XCSS via ekscss",
  "repository": "github:maxmilton/stylelint-config",
  "homepage": "https://github.com/maxmilton/stylelint-config",
  "author": "Max Milton <max@bunnybunny.org>",
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./tailwindcss": {
      "types": "./src/index.d.ts",
      "default": "./src/tailwindcss.js"
    },
    "./xcss": {
      "types": "./src/index.d.ts",
      "default": "./src/xcss.js"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "lint": "bun lint:fmt && bun lint:js && bun lint:ts",
    "lint:fmt": "biome check",
    "lint:js": "eslint",
    "lint:ts": "tsc --noEmit",
    "test": "bun test"
  },
  "peerDependencies": {
    "stylelint": "^16.18.0"
  },
  "dependencies": {
    "postcss-ekscss": "^0.0.12",
    "stylelint-order": "^7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@eslint/js": "9.32.0",
    "@maxmilton/eslint-config": "0.2.1",
    "@types/bun": "1.2.19",
    "eslint": "9.32.0",
    "eslint-plugin-unicorn": "60.0.0",
    "stylelint": "16.23.0",
    "stylelint-config-standard": "39.0.0",
    "typescript": "5.9.2",
    "typescript-eslint": "8.38.0"
  }
}
